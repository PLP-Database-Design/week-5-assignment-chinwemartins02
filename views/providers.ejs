<!-- views/providers.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Providers</title>
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 8px;
    }

    th{
        background: chartreuse;
    }
    td{
        background: chocolate;
    }
  </style>
</head>
<body>
  <h1>Providers List</h1>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Provider Specialty</th>
      </tr>
    </thead>
    <tbody>
      <% results.forEach(row => { %>
        <tr>
          <td><%= row.first_name %></td>
          <td><%= row.last_name %></td>
          <td><%= row.provider_specialty %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
